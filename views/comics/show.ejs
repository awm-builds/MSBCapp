<%- include('../partials/header') %>

    <h1>
        <%= comic.title %>
    </h1>
    <img src="<%= comic.image %>/portrait_incredible.jpg"/>
    <p>
        <%= comic.description %>
    </p>
    <p>
        <%= comic.date.toLocaleDateString() %>
    </p>
    <br>
    <!-- new markup below -->
    <br><br><h2>Reviews</h2>
    <form id="add-review-form" method="POST"
    action="/comics/<%= comic._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
    </select>
    <input type="submit" value="Add Review">
    </form>

    <% if (comic.reviews.length) { %>
    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
        </tr>
        </thead>
        <tbody>
        <% comic.reviews.forEach(function(c) { %>
            <tr>
            <!-- .toLocaleDateString() provides a more friendly date format -->
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
            <td><%= c.rating %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
    <% } else { %>
    <h5>No Reviews Yet</h5>
    <% } %>

<%- include('../partials/footer') %>